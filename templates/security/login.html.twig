{% extends 'base_externa.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}
<form method="post" class="user">
    {% if error %}
        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    {% if app.user %}
        <div class="mb-3">
            Você já está logado {{ app.user.username }}, <a href="{{ path('app_logout') }}">Sair</a>
        </div>
    {% endif %}

    <h1 class="h3 mb-3 font-weight-normal">Área restrita</h1>
    <label for="inputUuid">Login</label>
    <input type="text" value="{{ last_username }}" name="cpf" id="inputCpf" class="form-control form-control-user" placeholder="Digite seu Login" required autofocus>
    <label for="inputPassword">Senha</label>
    <input type="password" name="password" id="inputPassword" class="form-control form-control-user" placeholder="Digite sua senha" required>

    <input type="hidden" name="_csrf_token"
           value="{{ csrf_token('authenticate') }}"
    >

    {#
        Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
        See https://symfony.com/doc/current/security/remember_me.html

        <div class="checkbox mb-3">
            <label>
                <input type="checkbox" name="_remember_me"> Remember me
            </label>
        </div>
    #}

    <button class="btn btn-primary btn-user btn-block mt-2" type="submit">
        Entrar
    </button>
</form>
{% endblock %}
