{% extends 'admin/base.html.twig' %}

{% block title %}UserPessoa{% endblock %}

{% block body %}
 <div class="card shadow mb-4">
    <div class="card-header py-3">
        <h5 class="m-0 font-weight-bold text-primary">{{ (user.nome)|upper }} </h5>
        {{ include('admin/user/_delete_form.html.twig') }}
    </div>
    <div class="card-body">
        <div class="col-sm-12">
            <table class="table table-striped">
        <tbody>
            <tr>
                <th>Status</th>
                {% set status = get_static_method('App\\Enum\\StatusEnum', 'getStatus') %}
                <td>{{ status[user.status] }}</td>
            </tr>
            <tr>
                <th>Login</th>
                <td>{{ user.login }}</td>
            </tr>
            <tr>
                <th>Cargo</th>
                {% set cargo = get_static_method('App\\Enum\\CargoEnum', 'getCargo') %}
                <td>{{ cargo[user.cargo] }}</td>
            </tr>
            <tr>
                <th>E-mail</th>
                <td>{{ user.email }}</td>
            </tr>
            <tr>
                <th>Telefone</th>
                <td>{{ user.telefone }}</td>
            </tr>
            <tr>
                <th>Celular</th>
                <td>{{ user.celular }}</td>
            </tr>
            <tr>
                <th>Logradouro</th>
                <td>{{ user.logradouro }}</td>
            </tr>
            <tr>
                <th>NÃºmero</th>
                <td>{{ user.numero }}</td>
            </tr>
            <tr>
                <th>Complemento</th>
                <td>{{ user.complemento }}</td>
            </tr>
            <tr>
                <th>Bairro</th>
                <td>{{ user.bairro }}</td>
            </tr>
            <tr>
                <th>Cep</th>
                <td>{{ user.cep }}</td>
            </tr>
            <tr>
                <th>UF</th>
                <td>{{ user.uf }}</td>
            </tr>
            <tr>
                <th>DataCadastro</th>
                <td>{{ user.dataCadastro ? user.dataCadastro|date('d/m/Y') : '' }}</td>
            </tr>
        </tbody>
    </table>
<a href="{{ path('user_admin_index')}}" class="btn btn-outline-secondary btn-sm">
    <i class="fa fa-arrow-circle-left"></i> Voltar
</a>
<a href="{{ path('user_admin_edit', {'id': user.id}) }}" class="btn btn-sm btn-outline-info">
    <i class="fa fa-edit"></i> Editar
</a>
{% endblock %}
