<form method="post" action="{{ path('user_admin_delete', {'id': user.id}) }}" onsubmit="return confirm('Deseja realmente excluir?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ user.id) }}">
    <button class="btn btn-outline-danger btn-sm float-right mb-2"><i class="fa fa-trash"></i> Delete</button>
</form>
