{% extends 'admin/base.html.twig' %}

{% block title %}Login{% endblock %}

{% block body %}
<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">Listagem de Login - Funcionário</h6>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Nome</th>
                        <th>Login</th>
                        <th>Ações</th>
                    </tr>
                </thead>
                <tbody>
                {% for user_pessoa in user_pessoas %}
                    <tr>
                        <td>{{ user_pessoa.id }}</td>
                        <td>{{ user_pessoa.nome }}</td>
                        <td>{{ user_pessoa.cpf }}</td>
                        <td>
                            <div class="btn-group">
                                <a href="{{ path('user_pessoa_show_admin', {'id': user_pessoa.id}) }}"
                                    class="btn btn-sm btn-outline-primary">
                                    <i class="fa fa-eye"></i>
                                </a>
                                <a href="{{ path('user_pessoa_edit_admin', {'id': user_pessoa.id}) }}"
                                    class="btn btn-sm btn-outline-primary">
                                    <i class="fa fa-edit"></i>
                                </a>
                            </div>
                        </td>
                    </tr>
                {% else %}
                   <tr>
                        <td colspan="6">nenhum registro encontrado.</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
</div>
{% endblock %}

{% block javascripts %}
<script>
$(document).ready(function() {
  $('#dataTable').DataTable({
      "language": {
          "url": "../../../datatables/portuguese-brasil.json"
      }
  });
});
</script>
{% endblock %}
