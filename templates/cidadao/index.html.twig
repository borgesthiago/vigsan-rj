{% extends 'base.html.twig' %}

{% block title %}Cidadão{% endblock %}

{% block body %}
<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">Listagem de Cidadão</h6>
        {% if not is_granted('ROLE_UNIDADE') %}
        <a href="{{ path('cidadao_new') }}" class="btn btn-outline-success btn-sm float-right mb-2">
            <i class="fa fa-plus-circle"></i>
            Novo
        </a>
        {% endif %}
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>Nome</th>
                        <th>Sivep</th>
                        <th>Idade (anos)</th>
                        <th>Sexo</th>
                        <th>Dias</th>
                        <th>Status</th>
                        <th>Ações</th>
                    </tr>
                </thead>
                <tbody>
                {% for cidadao in cidadaos %}
                    <tr>
                        <td>{{ cidadao.nome }}</td>
                        <td>{{ cidadao.sivep }}</td>
                        <td>{{ cidadao.idade }}</td>
                        <td>{{ cidadao.sexo }}</td>
                        {% set difference = date().diff(date(cidadao.dataNotificacao)) %}
                        {% set leftDays = difference.days %}
                        <td>
                            {{ leftDays }}
                            {% if leftDays > 20 and cidadao.dataEvolucao == null %}
                                <i class="fa fa-exclamation-circle vermelho"></i>
                            {% endif %}
                        </td>                        
                        {% set status = get_static_method('App\\Enum\\StatusCidadaoEnum', 'getStatus') %}
                        <td>{{ status[cidadao.status] }}</td>
                        <td>
                            <div class="btn-group">
                                <a href="{{ path('cidadao_show', {'id': cidadao.id}) }}"
                                    class="btn btn-sm btn-outline-primary">
                                    <i class="fa fa-eye"></i>
                                </a>
                                <a href="{{ path('cidadao_edit', {'id': cidadao.id}) }}"
                                    class="btn btn-sm btn-outline-primary">
                                    <i class="fa fa-edit"></i>
                                </a>
                            </div>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="5">nenhum registro encontrado</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
        <div>
            <i class="fa fa-exclamation-circle vermelho"></i> Notificação sem andamento
        </div>
    </div>
</div>
{% endblock %}

{% block javascripts %}
<script>
$(document).ready(function() {
  $('#dataTable').DataTable({
      "language": {
          "url": "../../../datatables/portuguese-brasil.json"
      }
  });
});
</script>
{% endblock %}
